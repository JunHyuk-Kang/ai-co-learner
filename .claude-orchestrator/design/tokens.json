{
  "colors": {
    "primary": "#3B82F6",
    "secondary": "#8B5CF6",
    "background": "#FFFFFF",
    "background-secondary": "#F3F4F6",
    "text-primary": "#111827",
    "text-secondary": "#6B7280",
    "success": "#10B981",
    "error": "#EF4444",
    "warning": "#F59E0B",
    "streaming-indicator": "#3B82F6",
    "abort-button": "#EF4444",
    "message-ai": "#F3F4F6",
    "message-user": "#DBEAFE"
  },
  "fonts": {
    "heading": {
      "family": "Inter, system-ui, sans-serif",
      "size": "24px",
      "weight": "700",
      "lineHeight": "1.2"
    },
    "body": {
      "family": "Inter, system-ui, sans-serif",
      "size": "16px",
      "weight": "400",
      "lineHeight": "1.5"
    },
    "code": {
      "family": "Consolas, Monaco, monospace",
      "size": "14px",
      "weight": "400",
      "lineHeight": "1.6"
    },
    "small": {
      "family": "Inter, system-ui, sans-serif",
      "size": "14px",
      "weight": "400",
      "lineHeight": "1.4"
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "xxl": "48px"
  },
  "borderRadius": {
    "sm": "4px",
    "md": "8px",
    "lg": "16px",
    "full": "9999px"
  },
  "animations": {
    "streaming-pulse": "pulse 1.5s ease-in-out infinite",
    "fade-in": "fadeIn 0.2s ease-in",
    "slide-up": "slideUp 0.3s ease-out"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
  }
}